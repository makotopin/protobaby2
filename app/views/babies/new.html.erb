<%= render "babies/header" %>
<main>
  <div class="main">
    <div class="n-contents">
      <div>
        <h1>子どもの新規登録</h1>
      </div>
      <div class="n-form">
        <%= form_with model: @baby, local: true do |f| %>
          <%= render 'error_messages', model: f.object %>
          <div class="image-wrapper">
            <p>画像</p>
            <p><%= f.file_field :image, class:"baby-image2" %></p>
          </div>
          <div class="name-wrapper">
            <p>名前</p>
            <p><%= f.text_area :name, class:"baby-text", id:"baby-name", placeholder:"おなまえ" %></p>
          </div>
          <div class="gender-wrapper">
            <p>性別</p>
            <p><%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"gender-select"}) %></p>
          </div>
          <div class="birthday-wrapper">
            <p>生年月日</p>
            <div class='input-birth-wrap'>
                  <%= raw sprintf(
                              f.date_select(
                                :birthday,
                                class:'select-birth',
                                id:"birth-date",
                                use_month_numbers: true,
                                prompt:'--',
                                start_year: 2015,
                                end_year: (Time.now.year + 1),
                                date_separator: '%s'),
                              "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
            </div>
          </div>
          <div class="n-button">
            <%= f.submit "登録" ,class:"n-submit" %>
            <%= link_to "戻る", root_path, class:"n-link" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
<%= render "babies/footer"%>