<%= render "babies/header" %>
<main class="main">
  <h2 class="registration">新規登録</h2>
  <div class="registration-wrapper">
    <div class="registration-form">
    

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"formtype" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"formtype" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"formtype" %>
      </div>

      <div class="actions">
        <%= f.submit "登録", class:"submitbtn" %>
      </div>
    <% end %>

    
    </div>
  </div>
  <%
=begin%>
  <div class="loginbtnwrapper">
    <div class="loginlink">
      <%= render "devise/shared/links", class:"loglink" %>
    </div>
  </div>
  <%
=end %>
</main>

<%= render "babies/footer"%>